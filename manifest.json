{
  "manifest_version": 3,
  "name": "Google Calendar: Declined Events Toggle",
  "version": "1.0.0",
  "description": "One-click toggle to show/hide declined events in Google Calendar.",
  "action": {
    "default_title": "Toggle Declined Events",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["scripting", "tabs", "storage"],
  "host_permissions": ["https://calendar.google.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
